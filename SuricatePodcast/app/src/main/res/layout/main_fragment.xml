<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/master_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_playlist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/cd_main_list"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/list_item_padding_top_bottom"
            android:paddingEnd="@dimen/list_item_padding_start_end"
            android:paddingStart="@dimen/list_item_padding_start_end"
            android:paddingTop="@dimen/list_item_padding_top_bottom" />

        <FrameLayout
            android:id="@+id/media_player_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/search_fab"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:layout_gravity="end"
            android:layout_margin="@dimen/search_button"
            android:clickable="true"
            android:contentDescription="@string/cd_search_fab"
            android:focusable="true"
            android:onClick="doSearch"
            android:src="@drawable/magnifier" />

    </LinearLayout>


</LinearLayout>