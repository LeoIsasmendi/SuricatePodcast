<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:showIn="@layout/detail_fragment">

    <ImageView
        android:id="@+id/detail_poster"
        android:layout_width="@dimen/detail_podcast_poster"
        android:layout_height="@dimen/detail_podcast_poster"
        android:src="@drawable/default_poster" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/detail_head_text"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_detail_name"
            tools:text="Podcast Name" />

        <TextView
            android:id="@+id/detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_detail_date"
            tools:text="01/01/1111" />

        <TextView
            android:id="@+id/detail_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_detail_duration"
            tools:text="99:99:99" />
    </LinearLayout>
</LinearLayout>