<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:contentDescription="@string/cd_search_item_list"
    android:focusable="true"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_item_poster"
        android:layout_width="@dimen/item_list_thumb_size"
        android:layout_height="@dimen/item_list_thumb_size"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/picture" />

    <TextView
        android:id="@+id/search_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/list_item_name_margin"
        android:layout_marginStart="@dimen/list_item_name_margin"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:textSize="@dimen/item_text_size"
        tools:text="The joe rogan experience" />

    <TextView
        android:id="@+id/search_item_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_text_size"
        tools:text="99:99:99" />

    <CheckBox
        android:id="@+id/search_item_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:visibility="visible" />

</LinearLayout>