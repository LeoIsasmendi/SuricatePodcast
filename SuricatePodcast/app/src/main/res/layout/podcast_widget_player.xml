<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWidgetBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/widget_thumbail"
        android:layout_width="@dimen/widget_thumbail_size"
        android:layout_height="@dimen/widget_thumbail_size"
        android:src="@drawable/cast_album_art_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_min_height"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/widget_padding_TopBottom"
        android:paddingEnd="@dimen/widget_padding_StartEnd"
        android:paddingStart="@dimen/widget_padding_StartEnd"
        android:paddingTop="@dimen/widget_padding_TopBottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:text="@string/widget_default_title"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/widget_text_size_title"
                tools:text="Podcast Name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/widget_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWidgetBackground"
                android:rotation="180"
                android:src="@drawable/media_player_next_24x24" />

            <ImageButton
                android:id="@+id/widget_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWidgetBackground"
                android:src="@drawable/media_player_play_24x24" />

            <ImageButton
                android:id="@+id/widget_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWidgetBackground"
                android:src="@drawable/media_player_pause_24x24"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/widget_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWidgetBackground"
                android:src="@drawable/media_player_next_24x24" />

            <TextView
                android:id="@+id/widget_length"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/widget_default_length"
                android:textColor="@color/colorSecondatyText"
                android:textSize="@dimen/widget_text_size_length"
                tools:text="00:00" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>